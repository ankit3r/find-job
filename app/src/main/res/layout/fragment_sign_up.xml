<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/arrow_back_solid" />


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/job_search" />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgLogo"/>
        <LinearLayout
            android:id="@+id/layoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/cardStyle">

                <EditText
                    android:id="@+id/eTxtNameUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_full_name"
                    android:layout_margin="5dp"
                    android:inputType="textEmailAddress" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPhNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/cardStyle">

                <EditText
                    android:id="@+id/eTxtPhNoUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_phone_no"
                    android:layout_margin="5dp"
                    android:inputType="phone" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/cardStyle">

                <EditText
                    android:id="@+id/eTxtEmailUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_email"
                    android:layout_margin="5dp"
                    android:inputType="textEmailAddress" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/cardStyle">

                <EditText
                    android:id="@+id/eTxtPassUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_password"
                    android:layout_margin="5dp"
                    android:inputType="textPassword" />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/sign_up"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <View
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/or_sign_up_with"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnGoogleUp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    style="@style/cardStyle">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/google"/>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="55dp"
                    android:layout_height="2dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnGithubUp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    style="@style/cardStyle">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/github"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>