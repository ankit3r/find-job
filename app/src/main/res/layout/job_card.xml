<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCard"
    style="@style/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardTextTitle"
            style="@style/textStyle_20sp_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cardTxtCyName"
            style="@style/textStyle_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTextTitle" />

        <TextView
            android:id="@+id/cardTxtJobType"
            style="@style/textStyle_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTxtCyName" />

        <TextView
            android:id="@+id/cardTxtPay"
            style="@style/textStyle_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTxtJobType"
            android:textColor="#06810B" />

        <TextView
            android:id="@+id/cartTxtApplyed"
            style="@style/textStyle_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardTxtPay"
            android:layout_below="@id/cardTxtJobType"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:textAlignment="textEnd" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>